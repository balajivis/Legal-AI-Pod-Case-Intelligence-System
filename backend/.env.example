# Legal AI Pod Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
# Get your API key from: https://makersuite.google.com/app/apikey

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
SECRET_KEY=legal-ai-pod-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SQLITE_DB_PATH=legal_data.db
CHROMADB_PATH=./chromadb_legal

# =============================================================================
# LEGAL SYSTEM CONFIGURATION
# =============================================================================
# Attorney session timeout (in seconds)
ATTORNEY_SESSION_TIMEOUT=3600

# Encryption key for attorney-client privileged communications
# Generate a secure key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
LEGAL_ENCRYPTION_KEY=generate-secure-key-here

# Professional responsibility monitoring
ETHICS_MONITORING_ENABLED=True
PRIVILEGE_PROTECTION_ENABLED=True
CONFLICT_SCREENING_ENABLED=True

# =============================================================================
# LEGAL COMPLIANCE SETTINGS
# =============================================================================
# Attorney-client privilege settings
PRIVILEGE_AUDIT_LOGGING=True
PRIVILEGE_SESSION_ENCRYPTION=True
PRIVILEGE_DATA_RETENTION_DAYS=2555  # 7 years

# Professional responsibility compliance
COMPETENCE_MONITORING=True
AI_DISCLOSURE_REQUIRED=True
TECHNOLOGY_SUPERVISION_REQUIRED=True

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/legal_app.log
AUDIT_LOG_FILE=logs/legal_audit.log
ETHICS_LOG_FILE=logs/legal_ethics.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT token settings
JWT_SECRET_KEY=legal-jwt-secret-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# LEGAL KNOWLEDGE BASE SETTINGS
# =============================================================================
# ChromaDB settings
CHROMA_COLLECTION_CASE_LAW=legal_case_law
CHROMA_COLLECTION_STATUTES=legal_statutes
CHROMA_COLLECTION_PRECEDENTS=legal_precedents
CHROMA_COLLECTION_CONTRACTS=legal_contracts

# Legal search settings
MAX_SEARCH_RESULTS=50
LEGAL_SIMILARITY_THRESHOLD=0.7
PRECEDENT_WEIGHT_THRESHOLD=5

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================
# Legal research agent settings
RESEARCH_AGENT_ENABLED=True
RESEARCH_MAX_CASES=100
RESEARCH_JURISDICTION_FILTER=True

# Case analysis agent settings
CASE_ANALYSIS_ENABLED=True
CASE_STRENGTH_SCORING=True
STRATEGIC_RECOMMENDATIONS=True

# Document review agent settings
DOCUMENT_REVIEW_ENABLED=True
CONTRACT_RISK_ANALYSIS=True
COMPLIANCE_CHECKING=True

# Precedent mining agent settings
PRECEDENT_MINING_ENABLED=True
CITATION_NETWORK_ANALYSIS=True
ANALOGOUS_CASE_DISCOVERY=True

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode settings
DEV_MODE=True
DEV_SAMPLE_DATA=True
DEV_MOCK_AUTHENTICATION=False

# Testing settings
TESTING=False
TEST_DATABASE=legal_test.db

# =============================================================================
# PRODUCTION SETTINGS (for deployment)
# =============================================================================
# Production database settings
# PRODUCTION_DB_URL=postgresql://user:password@localhost/legal_ai_prod
# REDIS_URL=redis://localhost:6379/0

# Production security settings
# SSL_REQUIRED=True
# SECURE_COOKIES=True
# SESSION_COOKIE_SECURE=True

# Production monitoring
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# =============================================================================
# LEGAL DISCLAIMER SETTINGS
# =============================================================================
# Disclaimer and compliance text
LEGAL_DISCLAIMER_ENABLED=True
AI_DISCLOSURE_TEXT="This analysis was prepared with the assistance of artificial intelligence. All AI-generated content has been reviewed by a licensed attorney."
COMPETENCE_DISCLAIMER="The use of AI technology does not diminish professional responsibility or the quality of legal services provided."

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup settings
AUTO_BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Performance monitoring
PERFORMANCE_MONITORING=True
RESPONSE_TIME_LOGGING=True
USAGE_ANALYTICS=True

# Legal metrics tracking
CASE_OUTCOME_TRACKING=True
RESEARCH_ACCURACY_METRICS=True
ETHICS_COMPLIANCE_METRICS=True

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# External legal database integrations (optional)
# WESTLAW_API_KEY=your_westlaw_api_key
# LEXISNEXIS_API_KEY=your_lexisnexis_api_key
# BLOOMBERG_LAW_API_KEY=your_bloomberg_law_api_key

# Court filing system integrations (optional)
# PACER_USERNAME=your_pacer_username
# PACER_PASSWORD=your_pacer_password

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
# SMTP settings for legal notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=True

